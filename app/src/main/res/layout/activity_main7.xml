<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kay.sgfmradio.Main7Activity">

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonHome"
        android:textColor="#00FF00"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/untitled5"
        android:id="@+id/imageView6"
        android:layout_below="@+id/buttonHome"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp" />

    <Button
        android:text="Play / Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlayStop"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="200dp"
        android:id="@+id/seekBar1"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView19"
        android:layout_alignStart="@+id/buttonPlayStop"
        android:layout_marginTop="11dp" />

    <ImageView
        android:layout_width="50dp"
        app:srcCompat="@drawable/volume"
        android:id="@+id/imageView19"
        android:layout_marginTop="11dp"
        android:layout_height="40dp"
        android:layout_below="@+id/buttonPlayStop"
        android:layout_toStartOf="@+id/seekBar1" />


    <ImageButton
        android:layout_width="80dp"
        app:srcCompat="@drawable/setting"
        android:id="@+id/SettingButton"
        android:scaleType="centerCrop"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_marginTop="21dp"
        android:layout_height="80dp"
        android:elevation="0dp"
        android:layout_below="@+id/imageView19"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
